<h1>Cocktails</h1>
<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <ul>
        <% @cocktails.each do |cocktail| %>
        <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
        <p><%= link_to "Edit this cocktail", edit_cocktail_path(cocktail) %></p>
        <p><%= link_to "Delete this cocktail", cocktail_path(cocktail),
            method: :delete,
            data: { confirm: "Are you sure you want to delete this cocktail?" } %></p>
      <% end %>
      </ul>
    </div>
    <%= link_to 'New Cocktail', new_cocktail_path %>
  </div>
</div>
